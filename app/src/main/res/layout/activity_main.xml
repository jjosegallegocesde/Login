<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondofinal"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/fotoEmpleadoMain"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/avatar1"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/nombreEmpleadoMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="SANDRA PEREZ"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/fotoEmpleadoMain"/>

    <TextView
        android:id="@+id/cedulaEmpleadoMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Cedula:4356987"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/nombreEmpleadoMain"
        app:layout_constraintStart_toEndOf="@id/fotoEmpleadoMain"/>

    <TextView
        android:id="@+id/ocupacionEmpleadoMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="OcupaciÃ³n:Empleado"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/cedulaEmpleadoMain"
        app:layout_constraintStart_toEndOf="@id/fotoEmpleadoMain"/>

    <EditText
        android:id="@+id/horas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:hint="Horas trabajadas en la semana:"
        android:textColorHint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/ocupacionEmpleadoMain"
        app:layout_constraintStart_toEndOf="@id/fotoEmpleadoMain"/>

    <Button
        android:id="@+id/botonCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/gray"
        android:text="Calcular Salario"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/horas"
        app:layout_constraintStart_toEndOf="@id/fotoEmpleadoMain"/>

    <TextView
        android:id="@+id/descripcionEmpeladoMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/descripcion1"
        app:layout_constraintTop_toBottomOf="@id/fotoEmpleadoMain"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/descripcionEmpeladoMain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
